<div style="width: 80%; margin: 0 auto;">
	<div>
		<div class="row">
			<div class="col-md-12 top-space">
				<h3 class="letra-times-new-roman text-center" style="font-size: 1.5em;"> Edicion De Marcas </h3>
				
			</div>
			<%@brands.each do |brand|%>
				<div class="col-md-4 top-space vertical">
					<%= link_to (image_tag brand.logo.url(:normal)), edit_brand_path(brand.id)  %>
				</div>
			<%end%>
		</div>
		<div class= "center-xs top-space">
			<%= link_to "Agregar Marca", new_brand_path, class: "btn white be-blue" %>
		</div>
	</div>
</div>


